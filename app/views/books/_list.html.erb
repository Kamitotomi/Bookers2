
<h1>NewBook</h1>

<%= form_for(book) do |f|  %>
<!-- ここにエラーを書く？ -->
	<% if book.errors.any? %>
		<h3>入力した内容にエラーが<%= book.errors.count %>件あります</h3>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
	<% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'create' %>

<% end %>
