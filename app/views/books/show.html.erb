<!-- フラッシュメッセージ -->
<% if flash[:notice] %>
      <div class="flash">
        <p class="text"><%= flash[:notice] %></p>
      </div>
 <% end %>

<div class="body">
	<div class="container">
		<p id="notice"></p>

		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/cope', user: @user %>
				<!-- 新規投稿部分（共通テンプレ？） -->
				<%= render 'books/list', book: @book %>
			</div>

			<!-- ログインユーザーの投稿一覧 -->

			<div class="col-xs-9">
				<h2>Books</h2>

				<table class="table table-hover table-inverse">
					
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<!-- 繰り返さない -->
					
						<tbody>
							<tr>
								<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>  </td>
								
								
								<td><%= @books.title %></td> 
								
								<td><%= @books.body %></td>
								
								<% if @books.user == current_user %>
								<td><%= link_to "edit", edit_book_path(@books) %></td>
								
								<td><%= link_to "削除", book_path(@books), method: :delete %></td>
								<% end %>
							</tr>
						</tbody>
					
				</table>
				
			</div>
			
		</div>
		
	</div>
	
</div>